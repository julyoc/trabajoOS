<% layout('ly') -%>

<main class="container">
    <div class="row">
        <div class="col-md-5">
            <h4 style="text-align: center;">Añadir nuevo</h4>
            <form action="/add" method="post">
                <div class="form-group">
                    <label for="nombre">Nombre: </label>
                    <input type="text" name="nombre" id="nombre" class="form-control" placeholder="Nombre" required>
                </div>
                <div class="form-group">
                    <label for="username">Nombre de Usuario: </label>
                    <input type="text" name="username" id="username" class="form-control" placeholder="Nombre de Usuario" required>
                </div>
                <div class="form-group">
                    <label for="correo">Correo Electronico: </label>
                    <input type="email" name="correo" id="correo" class="form-control" placeholder="ejm@ejm.com" required>
                </div>
                <div class="form-group">
                    <label for="contrasenia">Contraseña: </label>
                    <input type="password" name="contrasenia" id="contrasenia" class="form-control" placeholder="*********" required>
                </div>
                <div style="text-align: center;">
                    <input type="submit" value="Enviar" class="btn btn-primary" data-toggle="tooltip" data-placement="top" title="Guardar registro">
                </div>
            </form>
        </div>
        <div class="col-md-7">
            <table class="table">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">Codigio (ID)</th>
                        <th scope="col">Nombre</th>
                        <th scope="col">Usuario</th>
                        <th scope="col">Correo</th>
                        <th scope="col">Contraseña</th>
                        <th scope="col">herramientas</th>
                    </tr>
                </thead>
                <tbody style="text-align: right;">
                    <% for (let i = 0; i < data.length; i++) { %>
                        <tr>
                            <th scope="row"><%= data[i].codigo_usr %></th>
                            <td><%= data[i].nombre_usr %></td>
                            <td><%= data[i].nombre_usuario_usr %></td>
                            <td><%= data[i].correo_usr %></td>
                            <td><%= data[i].contrasenia_usr %></td>
                            <td>
                                <a href="/edit?id=<%= data[i].codigo_usr %>" class="btn btn-link" data-toggle="tooltip" title="Editar">
                                    <i class="fa far fa-edit"></i>
                                </a>
                                <a href="/delete?id=<%= data[i].codigo_usr %>" class="btn btn-link" data-toggle="tooltip" title="Eliminar">
                                    <i class="fa far fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
            <div style="text-align: center;">
                <a href="/truncate" class="btn btn-primary" data-toggle="tooltip" title="Se eliminaran todos los datos">Reestablecer tabla</a>
            </div>
        </div>
    </div>
</main>